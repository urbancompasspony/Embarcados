#!/usr/bin/env python3

import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

GPIO.setup(24, GPIO.OUT)

GPIO.setup(26, GPIO.OUT)
GPIO.setup(12, GPIO.OUT)
GPIO.setup(18, GPIO.OUT)
pwm = GPIO.PWM(18, 1000)

GPIO.output(24, True)

GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(12, True)
time.sleep(0.25)
GPIO.output(12, False)
pwm.start(50)
time.sleep(0.25)
pwm.stop()
GPIO.output(24, False)
GPIO.output(12, False)
time.sleep(0.5)
GPIO.cleanup()
